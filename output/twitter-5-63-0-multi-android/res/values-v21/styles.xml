<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActivityAnimation" parent="@android:style/Animation.Activity" />
    <style name="BaseFabButtonStyle">
        <item name="android:background">@drawable/composer_fab_bg</item>
        <item name="android:elevation">@dimen/composer_fab_elevation_low</item>
        <item name="android:stateListAnimator">@anim/composer_fab_elevation</item>
    </style>
    <style name="List.Accounts" parent="@style/List">
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
    </style>
    <style name="Theme.DarkBaseShared" parent="@style/Theme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="listBackground">@color/clear</item>
    </style>
    <style name="Theme.Dialog" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:windowTitleStyle">@android:style/TextAppearance.Large</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:dialogTheme">@style/Theme.BaseDialog</item>
        <item name="android:alertDialogTheme">@style/Theme.Dialog.Alert</item>
        <item name="listBackground">@color/clear</item>
        <item name="userImageViewStyle">@style/UserImageViewStyle</item>
    </style>
    <style name="Theme.Modal" parent="@style/Theme">
        <item name="android:windowAnimationStyle">@style/ModalActivityAnimation</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="toolBarStyle">@style/ToolBarStyle.Modal</item>
        <item name="toolbarBackgroundColor">@color/white</item>
        <item name="toolbarForegroundColor">@color/twitter_blue</item>
    </style>
    <style name="Theme.Settings.Notification" parent="@style/Theme.Settings">
        <item name="toolBarStyle">@style/ToolBarStyle.Notification</item>
    </style>
    <style name="Theme.WhiteToolBarForeground.Events" parent="@style/Theme.WhiteToolBarForeground">
        <item name="android:statusBarColor">@color/black</item>
        <item name="toolBarHomeStyle">@style/ToolBarHomeStyle.Events</item>
        <item name="toolBarStyle">@style/ToolBarStyle.Events</item>
    </style>
    <style name="ThemeBase" parent="@android:style/Theme.Material.Light">
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:dialogTheme">@style/Theme.BaseDialog</item>
        <item name="android:alertDialogTheme">@style/Theme.Dialog.Alert</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorControlHighlight">@color/pressed</item>
        <item name="android:colorPrimary">@color/twitter_blue</item>
        <item name="android:colorPrimaryDark">@color/dark_blue</item>
        <item name="android:colorAccent">@color/medium_blue</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="drawerItemStyle">@android:style/Widget.Material.Light.TextView</item>
        <item name="dropDownListViewStyle">@android:style/Widget.Material.ListView.DropDown</item>
        <item name="toolBarOverflowSubtitleTextAppearance">@style/OverflowSubtitleTextAppearance</item>
        <item name="toolBarOverflowTextAppearance">@style/OverflowTextAppearance</item>
        <item name="toolBarPopupWindowStyle">@style/ToolBarPopupWindow</item>
        <item name="toolBarSwitchStyle">@style/ToolBarSwitchStyle</item>
    </style>
    <style name="ToolBarPopupWindow" parent="@android:style/Widget.Material.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup_menu_inset</item>
        <item name="android:popupAnimationStyle">@style/ToolbarPopupWindowAnimation</item>
    </style>
    <style name="ToolBarStyle" parent="@style/ToolBarStyleBase">
        <item name="toolBarTheme">@style/Theme.Toolbar</item>
    </style>
    <style name="ToolBarSwitchStyle" />
    <style name="VideoCardCanvas" parent="@style/AvCardCanvas">
        <item name="android:statusBarColor">@color/black</item>
    </style>
    <style name="AVMediaSeekBar">
        <item name="android:background">@null</item>
        <item name="android:progressDrawable">@drawable/ic_av_scrubber_light_background</item>
        <item name="android:thumb">@drawable/ic_av_scrubber_control_light</item>
        <item name="android:splitTrack">false</item>
    </style>
    <style name="CardCanvasVideoSeekBar">
        <item name="android:background">@null</item>
        <item name="android:progressDrawable">@drawable/ic_av_scrubber_dark_background</item>
        <item name="android:thumb">@drawable/ic_av_scrubber_control_dark</item>
        <item name="android:splitTrack">false</item>
    </style>
    <style name="Theme.BaseDialog" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/medium_blue</item>
    </style>
    <style name="Theme.Dialog.Alert" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/medium_blue</item>
    </style>
    <style name="Theme.Toolbar" parent="@style/Theme">
        <item name="android:colorAccent">@color/medium_gray</item>
    </style>
    <style name="Theme.Toolbar.Switch" parent="@style/Theme.Toolbar">
        <item name="android:colorForeground">@color/black</item>
        <item name="android:colorControlActivated">@color/dark_blue</item>
    </style>
    <style name="ToolBarStyle.Notification" parent="@style/ToolBarStyleBase">
        <item name="toolBarTheme">@style/Theme.Toolbar.Switch</item>
    </style>
</resources>
