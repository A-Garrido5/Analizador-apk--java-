<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionButton" parent="@style/ActionButtonBase">
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginRight">@dimen/btn_padding_horiz</item>
    </style>
    <style name="ActionButton.Follow" parent="@style/ActionButton">
        <item name="android:paddingTop">@dimen/btn_follow_padding</item>
        <item name="android:paddingBottom">@dimen/btn_follow_padding</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:layout_marginRight">0.0dip</item>
        <item name="android:minWidth">@dimen/user_follow_btn_min_width</item>
        <item name="android:minHeight">@dimen/user_follow_btn_min_height</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="ActionButton.TweetDetails" parent="@style/ActionButton">
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="ActivityText.Info" parent="@style/ActivityText">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:paddingLeft">@dimen/list_row_padding_horizontal</item>
    </style>
    <style name="ActivityText.Title" parent="@style/ActivityText">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">bottom|center|right</item>
    </style>
    <style name="CarouselDismiss">
        <item name="android:paddingRight">@dimen/tweet_dismiss_padding</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="CarouselHeader">
        <item name="android:layout_toLeftOf">@id/profile_image</item>
    </style>
    <style name="CarouselProfileImage">
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="ListRow.Activity" parent="@style/ListRow">
        <item name="android:gravity">right</item>
    </style>
    <style name="ParentAlignment">
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="SectionHeader.Profile.SuggestedHeader" parent="@style/SectionHeader.Profile">
        <item name="android:gravity">right</item>
    </style>
    <style name="TextContent">
        <item name="android:gravity">right</item>
    </style>
    <style name="TweetDetailsName">
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">@dimen/list_row_padding_horizontal</item>
        <item name="android:layout_toLeftOf">@id/profile_image</item>
        <item name="android:layout_toRightOf">@id/action_button</item>
    </style>
    <style name="UserImage">
        <item name="android:layout_width">@dimen/user_image_size</item>
        <item name="android:layout_height">@dimen/user_image_size</item>
        <item name="android:layout_marginLeft">@dimen/list_row_padding_horizontal</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="UserSelected">
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="DiscoverSubNavText">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">bottom|center|right</item>
        <item name="android:padding">12.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
